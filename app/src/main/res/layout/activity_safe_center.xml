<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:id="@+id/lin_change_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space15"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:paddingTop="@dimen/space10"
        android:paddingBottom="@dimen/space10"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_block"
        android:elevation="@dimen/space3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="@dimen/textfont15"
                android:textColor="@color/text_black"
                android:text="@string/change_login_pwd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space8"
                android:lines="1"
                android:textSize="@dimen/textfont13"
                android:textColor="@color/text_gray"
                android:text="@string/change_login_pwd_hint" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_change_trade_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space15"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:paddingTop="@dimen/space10"
        android:paddingBottom="@dimen/space10"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_block"
        android:elevation="@dimen/space3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="@dimen/textfont15"
                android:textColor="@color/text_black"
                android:text="@string/change_trade_pwd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space8"
                android:lines="1"
                android:textSize="@dimen/textfont13"
                android:textColor="@color/text_gray"
                android:text="@string/change_trade_pwd_hint" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_bind_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space15"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15"
        android:paddingTop="@dimen/space10"
        android:paddingBottom="@dimen/space10"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_block"
        android:elevation="@dimen/space3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="@dimen/textfont15"
                android:textColor="@color/text_black"
                android:text="@string/bind_email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space8"
                android:lines="1"
                android:textSize="@dimen/textfont13"
                android:textColor="@color/text_gray"
                android:text="@string/bind_email_hint" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>
</LinearLayout>