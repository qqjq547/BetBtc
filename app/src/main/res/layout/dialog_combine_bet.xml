<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bg_dialog_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space45"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textfont13"
            android:text="@string/compose_bet" />

        <View
            android:layout_width="@dimen/space40"
            android:layout_height="@dimen/space2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_indicate" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/textfont12"
                android:text="@string/overage_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont16"
                android:textStyle="bold"
                android:text="1235.12" />
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/layout_divide_line" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_bet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space500"
        android:background="@color/bg_theme"
        android:paddingBottom="@dimen/space1" />

</LinearLayout>