<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space15"
                android:background="@drawable/bg_white_block"
                android:elevation="@dimen/space3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space15"
                    android:paddingTop="@dimen/space10"
                    android:paddingRight="@dimen/space15"
                    android:paddingBottom="@dimen/space10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recharge_coin_type"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/textfont14" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_coin_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:drawablePadding="@dimen/space5"
                        android:text="@string/unit_usdt"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/textfont14" />
                </LinearLayout>
                <include layout="@layout/layout_divide_line"/>
                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="@dimen/space200"
                    android:layout_height="@dimen/space200"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space20" />
                <TextView
                    android:id="@+id/tv_coin_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/space20"
                    android:textSize="@dimen/textfont13"
                    android:textColor="@color/text_black"
                    android:text="12knkk12nk4kn4kw243kn2k34nk"/>
                <include layout="@layout/layout_divide_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_share"
                    style="@style/ViewClickStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space45"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/color_c25466"
                    android:textSize="@dimen/textfont14"
                    android:textStyle="bold"
                    android:text="@string/share"/>
                <View
                    android:layout_width="@dimen/divide_h_5"
                    android:layout_height="match_parent"
                    android:background="@color/bg_divide"/>
                <TextView
                    android:id="@+id/tv_copy"
                    style="@style/ViewClickStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space45"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/color_4daa90"
                    android:textSize="@dimen/textfont14"
                    android:textStyle="bold"
                    android:text="@string/copy"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space15"
                android:layout_marginTop="@dimen/space10"
                android:textSize="@dimen/textfont13"
                android:textColor="@color/text_gray"
                android:text="1.xxxxxxxxxxxxxxxxxxxxxxxx\n2.xxxxxxxxxxxxxxxxxxxxxxxxxx\n3.xxxxxxxxxxxxxxxxxxxxxxxx"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>