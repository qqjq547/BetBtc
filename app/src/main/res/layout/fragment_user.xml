<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_theme">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space200"
        android:background="@color/colorPrimary"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/space72"
                android:layout_height="@dimen/space72"
                android:layout_marginLeft="@dimen/space20"
                android:src="@drawable/ic_default_head"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textfont16"
                    android:textColor="@color/text_white"
                    android:textStyle="bold"
                    android:text="用户名称"/>
                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_user_level"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/space10"
                    android:textColor="@color/text_yellow"
                    android:textSize="@dimen/space12"
                    android:textStyle="bold"
                    android:text="LV 6"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_user_share"
                android:gravity="center"
                android:textSize="@dimen/textfont16"
                android:textColor="@color/text_white"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_ercode"
                android:drawablePadding="@dimen/space5"
                android:text="@string/share"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:layout_marginBottom="@dimen/space15"
        android:elevation="@dimen/space3"
        android:background="@drawable/bg_item_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space12"
            android:paddingBottom="@dimen/space12">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textfont14"
                    android:textColor="@color/text_gray"
                    android:text="@string/account_balance"/>
                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space10"
                    android:textSize="@dimen/textfont20"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:text="12343.23"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textfont14"
                        android:textColor="@color/text_gray"
                        android:text="@string/platom_award"/>
                    <ImageView
                        android:id="@+id/iv_tip"
                        android:layout_width="@dimen/space12"
                        android:layout_height="@dimen/space12"
                        android:layout_marginLeft="@dimen/space5"
                        android:src="@drawable/ic_tip"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space10"
                    android:textSize="@dimen/textfont20"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:text="12343.23"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_4daa90"
                android:textSize="@dimen/textfont14"
                android:textStyle="bold"
                android:padding="@dimen/space12"
                android:text="@string/recharge"
                />
            <View
                android:layout_width="@dimen/divide_h"
                android:layout_height="@dimen/space20"
                android:background="@color/bg_divide"/>
            <TextView
                android:id="@+id/tv_withdraw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_c25466"
                android:textSize="@dimen/textfont14"
                android:textStyle="bold"
                android:padding="@dimen/space12"
                android:text="@string/widthdraw"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space80"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_user_banner"
        android:elevation="@dimen/space4"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/space3"
        android:background="@drawable/bg_item_white"
        android:layout_marginLeft="@dimen/space15"
        android:layout_marginRight="@dimen/space15"
        android:layout_marginTop="@dimen/space15"
        android:layout_marginBottom="@dimen/space15"
        android:padding="@dimen/space15"/>
</LinearLayout>