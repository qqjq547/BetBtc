<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:layout_marginLeft="@dimen/space30"
    android:layout_marginRight="@dimen/space30">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/space15"
        android:lines="1"
        android:textSize="@dimen/textfont16"
        android:textColor="@color/text_black"
        android:text="title"/>
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space15"
        android:lines="1"
        android:textSize="@dimen/textfont14"
        android:textColor="@color/text_black"
        android:text="message"/>
    <include layout="@layout/layout_divide_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancel"
            style="@style/ViewClickStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/space15"
            android:lines="1"
            android:textSize="@dimen/textfont14"
            android:textColor="@color/text_black"
            android:text="cancel"/>
        <View
            android:id="@+id/v_line"
            android:layout_width="@dimen/divide_h_5"
            android:layout_height="match_parent"
            android:background="@color/bg_divide"/>
        <TextView
            android:id="@+id/tv_confirm"
            style="@style/ViewClickStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/space15"
            android:lines="1"
            android:textSize="@dimen/textfont14"
            android:textColor="@color/text_black"
            android:text="confirm"/>
    </LinearLayout>
</LinearLayout>