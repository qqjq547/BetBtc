<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <include layout="@layout/layout_title"/>
   <LinearLayout
       android:id="@+id/lin_person_info"
       style="@style/ViewClickStyle"
       android:layout_width="match_parent"
       android:layout_height="@dimen/space45"
       android:gravity="center_vertical"
       android:layout_marginTop="@dimen/space20"
       android:background="@color/bg_white"
       android:paddingLeft="@dimen/space15"
       android:paddingRight="@dimen/space15">
       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textColor="@color/text_black"
           android:textSize="@dimen/textfont14"
           android:text="@string/person_info"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/text_gray_drak"
           android:textSize="@dimen/textfont14"
           android:drawablePadding="@dimen/space5"
           android:drawableRight="@drawable/ic_arrow_right"/>
   </LinearLayout>
    <include layout="@layout/layout_divide_line"/>
    <LinearLayout
        android:id="@+id/lin_msg_notify"
        style="@style/ViewClickStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space45"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textfont14"
            android:text="@string/msg_notify"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray_drak"
            android:textSize="@dimen/textfont14"
            android:drawablePadding="@dimen/space5"
            android:drawableRight="@drawable/ic_arrow_right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_real_name"
        style="@style/ViewClickStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space45"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/space20"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textfont14"
            android:text="@string/real_name"/>
        <TextView
            android:id="@+id/tv_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray_drak"
            android:textSize="@dimen/textfont14"
            android:text="@string/un_real_name"
            android:drawablePadding="@dimen/space5"
            android:drawableRight="@drawable/ic_arrow_right"/>
    </LinearLayout>
    <include layout="@layout/layout_divide_line"/>
    <LinearLayout
        android:id="@+id/lin_language"
        style="@style/ViewClickStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space45"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textfont14"
            android:text="@string/language"/>
        <TextView
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray_drak"
            android:textSize="@dimen/textfont14"
            android:text="简体中文"
            android:drawablePadding="@dimen/space5"
            android:drawableRight="@drawable/ic_arrow_right"/>
    </LinearLayout>
    <include layout="@layout/layout_divide_line"/>
    <LinearLayout
        android:id="@+id/lin_color"
        style="@style/ViewClickStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space45"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textfont14"
            android:text="@string/balance_color"/>
        <TextView
            android:id="@+id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray_drak"
            android:textSize="@dimen/textfont14"
            android:text="绿涨红跌"
            android:drawablePadding="@dimen/space5"
            android:drawableRight="@drawable/ic_arrow_right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_logout"
        style="@style/ViewClickStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space45"
        android:layout_marginTop="@dimen/space30"
        android:gravity="center"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/space15"
        android:paddingRight="@dimen/space15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red"
            android:textSize="@dimen/textfont14"
            android:text="@string/exit_logput"/>
    </LinearLayout>
</LinearLayout>