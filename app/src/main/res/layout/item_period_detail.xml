<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space15"
    android:layout_marginTop="@dimen/space6"
    android:layout_marginRight="@dimen/space15"
    android:layout_marginBottom="@dimen/space6"
    android:paddingLeft="@dimen/space15"
    android:paddingRight="@dimen/space15"
    android:paddingTop="@dimen/space10"
    android:paddingBottom="@dimen/space10"
    android:background="@drawable/bg_item_white"
    android:elevation="@dimen/space3">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="@dimen/space70"
        android:layout_height="@dimen/space70"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/space15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textfont12"
                android:text="最高价" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="@dimen/space5"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/textfont12"
                android:text="查看详情" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space10"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="@dimen/textfont16"
                    android:textColor="@color/rise"
                    android:textStyle="bold"
                    android:text="@string/rise" />

                <TextView
                    android:id="@+id/tv_rise_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/textfont13"
                    android:textColor="@color/text_gray"
                    android:text="134注" />

                <TextView
                    android:id="@+id/tv_rise_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/textfont14"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:text="x1.23" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space8"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="@dimen/textfont16"
                    android:textColor="@color/fall"
                    android:textStyle="bold"
                    android:text="@string/fall" />

                <TextView
                    android:id="@+id/tv_fall_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/textfont13"
                    android:textColor="@color/text_gray"
                    android:text="134注" />

                <TextView
                    android:id="@+id/tv_fall_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/textfont14"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:text="x1.23" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>