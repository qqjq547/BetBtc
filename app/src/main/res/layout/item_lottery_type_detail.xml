<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space15"
    android:layout_marginTop="@dimen/space6"
    android:layout_marginRight="@dimen/space15"
    android:layout_marginBottom="@dimen/space6"
    android:paddingLeft="@dimen/space15"
    android:paddingRight="@dimen/space15"
    android:paddingTop="@dimen/space10"
    android:paddingBottom="@dimen/space10"
    android:background="@drawable/bg_item_white"
    android:elevation="@dimen/space3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019102318期"
            android:textColor="@color/text_gray_drak"
            android:textSize="@dimen/textfont13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="涨"
            android:textColor="@color/rise"
            android:textSize="@dimen/textfont18"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/space10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="9859.23"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:textSize="@dimen/textfont15" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="133注"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textfont14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="x1.34"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textfont14" />
    </LinearLayout>

</LinearLayout>