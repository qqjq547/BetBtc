<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space20"
    android:paddingTop="@dimen/space12"
    android:paddingRight="@dimen/space20"
    android:paddingBottom="@dimen/space12"
    android:background="@color/bg_white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="猜收盘价"
        android:textColor="@color/text_black"
        android:textSize="@dimen/textfont14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.betbtc.app.view.CircleProgress
                android:layout_width="@dimen/space60"
                android:layout_height="@dimen/space60"
                custom:circle_progress="50"
                custom:circle_text_size="@dimen/textfont13"
                custom:circle_text_color="@color/text_white"
                custom:circle_finished_color="@color/color_4daa90"
                custom:circle_prefix_text="x"
                custom:circle_title="@string/rise"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space10"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rise_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赔率:1.32"
                    android:textColor="@color/text_gray_drak"
                    android:textSize="@dimen/textfont12" />

                <TextView
                    android:id="@+id/tv_rise_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space6"
                    android:text="次数:12443"
                    android:textColor="@color/text_gray_drak"
                    android:textSize="@dimen/textfont12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.betbtc.app.view.CircleProgress
                android:layout_width="@dimen/space60"
                android:layout_height="@dimen/space60"
                custom:circle_progress="50"
                custom:circle_text_size="@dimen/textfont13"
                custom:circle_text_color="@color/text_white"
                custom:circle_finished_color="@color/color_c25466"
                custom:circle_prefix_text="x"
                custom:circle_title="@string/fall"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space10"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_down_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赔率:1.32"
                    android:textColor="@color/text_gray_drak"
                    android:textSize="@dimen/textfont12" />

                <TextView
                    android:id="@+id/tv_down_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space6"
                    android:text="次数:12443"
                    android:textColor="@color/text_gray_drak"
                    android:textSize="@dimen/textfont12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
