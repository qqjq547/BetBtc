<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/space12"
    android:paddingBottom="@dimen/space12">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/textfont13"
        android:textColor="@color/text_black"
        android:text="收盘价"/>
    <TextView
        android:id="@+id/tv_bet_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/textfont13"
        android:textStyle="bold"
        android:textColor="@color/rise"
        android:text="涨"/>
    <TextView
        android:id="@+id/tv_bet_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/textfont13"
        android:textColor="@color/text_black"
        android:text="10"/>
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/textfont13"
        android:textStyle="bold"
        android:textColor="@color/text_black"
        android:text="x2.3"/>
</LinearLayout>
    <ImageView
        android:id="@+id/iv_win"
        android:layout_width="@dimen/space40"
        android:layout_height="@dimen/space40"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/space80"
        android:src="@drawable/ic_state_win"/>
</FrameLayout>
