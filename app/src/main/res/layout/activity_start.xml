<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_scale="1"
        app:lottie_rawRes="@raw/bitcoin_to_the_moon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space150"
        android:layout_gravity="top"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textfont22"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="欢迎使用，祝您竞猜成功" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space150"
        android:layout_gravity="bottom"
        android:gravity="center">

        <Button
            android:id="@+id/btn_start"
            style="@style/ViewClickStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space45"
            android:gravity="center"
            android:layout_marginLeft="@dimen/space20"
            android:layout_marginRight="@dimen/space20"
            android:background="@drawable/bg_btn_normal"
            android:textSize="@dimen/textfont15"
            android:textColor="@color/text_white"
            android:text="@string/start_use"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>